<ul>
  <% comments.each do |comment| %>
    <% unless comment.id.nil? %>
      <li>
        <p class="left"><%= comment.content %></p>
        <p class="right">コメント日時：<%= comment.updated_at.strftime('%Y年%m月%d日 %H:%M:%S') %>
        投稿者：<%= comment.user.name %></p>
        <% if current_user.id == comment.user.id %>
          <p class="right">
            <%= link_to '', basis_comment_path(base, comment), class: "fa fa-trash-o fa-lg", method: :delete, remote: true, data: { confirm: '本当に削除していいですか？' } %>
          </p>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>
